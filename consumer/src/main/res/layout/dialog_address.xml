                <!-- android:layout_height="72dp" -->
                <!-- android:layout_margin="4dp" -->
                <!-- android:background="@drawable/selector_white_rec_border" -->
                <!-- android:gravity="center" -->
                <!-- android:orientation="horizontal" > -->


                <!-- <ImageView -->
                <!-- android:layout_width="24dp" -->
                <!-- android:layout_height="24dp" -->
                <!-- android:background="@drawable/circle_trans_border" -->
                <!-- android:padding="6dp" -->
                <!-- android:scaleType="centerInside" -->
                <!-- android:src="@drawable/ic_count_add" /> -->


                <!-- <TextView -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_marginLeft="8dp" -->
                <!-- android:text="添加收货地址" -->
                <!-- android:textColor="@color/textColorThird" -->
                <!-- android:textSize="16dp" /> -->
                <!-- </LinearLayout> -->
            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/address_dialog_manage"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/button_rec_blue"
            android:gravity="center"
            android:text="收货地址管理"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

</FrameLayout>