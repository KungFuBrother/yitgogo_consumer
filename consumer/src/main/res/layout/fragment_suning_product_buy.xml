<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="商品信息"
                android:textColor="@color/textColorSecond"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="4dp" >

                <ImageView
                    android:id="@+id/order_confirm_sale_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/back_white_rec_border"
                    android:scaleType="fitCenter"
                    android:src="@drawable/loading_default" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/order_confirm_sale_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/order_confirm_sale_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textColor="@color/red"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/back_white_rec_border"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/order_confirm_sale_count_delete"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/selector_trans_divider"
                                android:gravity="center"
                                android:text="-"
                                android:textSize="14dp" />

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/divider" />

                            <TextView
                                android:id="@+id/order_confirm_sale_count"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:gravity="center"
                                android:text="1"
                                android:textSize="12dp" />

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/divider" />

                            <TextView
                                android:id="@+id/order_confirm_sale_count_add"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/selector_trans_divider"
                                android:gravity="center"
                                android:text="+"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/order_confirm_sale_addition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:textColor="@color/red"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider" />

            <FrameLayout
                android:id="@+id/order_confirm_sale_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/order_confirm_sale_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/order_confirm_sale_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="总计："
            android:textColor="@color/textColorSecond"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/order_confirm_sale_total_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textColorCompany"
            android:textSize="18dp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <Button
            android:id="@+id/order_confirm_sale_confirm"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_trans_divider"
            android:text="确认"
            android:textColor="@color/textColorCompany"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>