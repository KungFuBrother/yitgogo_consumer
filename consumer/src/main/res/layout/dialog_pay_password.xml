<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/password_title_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/theme_title_background"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/password_title_lable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="@style/titleText" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp" >

            <LinearLayout
                android:id="@+id/password_code_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/back_trans_rec_border"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <yitgogo.consumer.view.PasswordView
                        android:id="@+id/password_code_1"
                        android:layout_width="8dp"
                        android:layout_height="8dp" >
                    </yitgogo.consumer.view.PasswordView>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <yitgogo.consumer.view.PasswordView
                        android:id="@+id/password_code_2"
                        android:layout_width="8dp"
                        android:layout_height="8dp" >
                    </yitgogo.consumer.view.PasswordView>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <yitgogo.consumer.view.PasswordView
                        android:id="@+id/password_code_3"
                        android:layout_width="8dp"
                        android:layout_height="8dp" >
                    </yitgogo.consumer.view.PasswordView>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <yitgogo.consumer.view.PasswordView
                        android:id="@+id/password_code_4"
                        android:layout_width="8dp"
                        android:layout_height="8dp" >
                    </yitgogo.consumer.view.PasswordView>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <yitgogo.consumer.view.PasswordView
                        android:id="@+id/password_code_5"
                        android:layout_width="8dp"
                        android:layout_height="8dp" >
                    </yitgogo.consumer.view.PasswordView>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <yitgogo.consumer.view.PasswordView
                        android:id="@+id/password_code_6"
                        android:layout_width="8dp"
                        android:layout_height="8dp" >
                    </yitgogo.consumer.view.PasswordView>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/password_input_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/password_input_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_trans_divider"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16dp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/password_input_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_trans_divider"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16dp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/password_input_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_trans_divider"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/password_input_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_trans_divider"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16dp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/password_input_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_trans_divider"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16dp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/password_input_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_trans_divider"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/password_input_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_trans_divider"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16dp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/password_input_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_trans_divider"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16dp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/password_input_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_trans_divider"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/password_input_delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_trans_divider"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="@color/red"
                    android:textSize="14dp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/password_input_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_trans_divider"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16dp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/password_input_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_trans_divider"
                    android:gravity="center"
                    android:text="确认"
                    android:textColor="@color/blue"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/password_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divider"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请稍候..."
            android:textColor="@color/textColorThird"
            android:textSize="14dp" />
    </LinearLayout>

</FrameLayout>