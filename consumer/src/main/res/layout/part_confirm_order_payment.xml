<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="支付方式"
        android:textColor="@color/textColorSecond"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <RadioGroup
            android:id="@+id/payment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp" >

            <RadioButton
                android:id="@+id/payment_type_online"
                style="@style/MyRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="在线支付"
                android:textColor="@color/textColorPrimary"
                android:textSize="14dp" />

            <RadioButton
                android:id="@+id/payment_type_send"
                style="@style/MyRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="货到付款"
                android:textColor="@color/textColorPrimary"
                android:textSize="14dp" />

            <RadioButton
                android:id="@+id/payment_type_cash"
                style="@style/MyRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="现金支付"
                android:textColor="@color/textColorPrimary"
                android:textSize="14dp" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/payment_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="使用手机快捷支付方式付款"
                android:textColor="@color/textColorPrimary"
                android:textSize="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/payment_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="收到商品时付款"
                android:textColor="@color/textColorPrimary"
                android:textSize="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/payment_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="下单成功后到收银台付款"
                android:textColor="@color/textColorPrimary"
                android:textSize="16dp"
                android:visibility="gone" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />
    </LinearLayout>

</LinearLayout>