<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="@drawable/selector_white_divider"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/list_car_select"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:background="@drawable/selector_trans_divider"
        android:padding="8dp">

        <CheckBox
            android:id="@+id/list_car_selected"
            style="@style/MyRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false" />
    </FrameLayout>

    <ImageView
        android:id="@+id/list_car_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="4dp"
        android:background="@drawable/back_white_rec_border"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/list_car_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:lines="3"
            android:textColor="@color/textColorPrimary"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/list_car_guige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:singleLine="true"
            android:textColor="@color/textColorSecond"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_car_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@color/red"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/list_car_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:singleLine="true"
                android:textColor="@color/textColorSecond"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/list_car_counting"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/back_white_rec_border"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/list_car_count_add"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/selector_trans_divider"
                android:scaleType="centerInside"
                android:src="@drawable/ic_count_add" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider"></LinearLayout>

            <TextView
                android:id="@+id/list_car_count"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider"></LinearLayout>

            <ImageView
                android:id="@+id/list_car_count_delete"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/selector_trans_divider"
                android:scaleType="centerInside"
                android:src="@drawable/ic_count_delete" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>