<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false"><color android:color="@android:color/transparent" />
    </item>
    <item android:state_checked="true"><shape android:shape="rectangle">
            <corners android:radius="2dp" />

            <solid android:color="@color/white" />

            <stroke android:dashGap="0dp" android:dashWidth="0dp" android:width="1px" android:color="@color/divider" />

            <padding android:bottom="1px" android:left="1px" android:right="1px" android:top="1px" />
        </shape></item>

</selector>